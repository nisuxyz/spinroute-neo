{
  "name": "vehicle-service",
  "scripts": {
    "start": "bun run src/index.ts",
    "start:dev": "bun run --watch src/index.ts",
    "start:dev:hot": "bun run --hot src/index.ts",
    "container:build": "podman build -f Containerfile.prod -t vehicle-service:latest .",
    "container:build:dev": "podman build -f Containerfile.dev -t vehicle-service:dev .",
    "container:dev": "podman run -p 3000:3000 vehicle-service:dev",
    "container:dev:stop": "podman stop vehicle-service:dev",
    "compose:up": "podman compose up -d",
    "compose:down": "podman compose down",
    "compose:logs": "podman compose logs -f",
    "helm:lint": "helm lint helm/",
    "helm:template": "helm template vehicle-service helm/",
    "helm:install": "helm install vehicle-service helm/",
    "helm:install:dry": "helm install --dry-run --debug vehicle-service helm/",
    "helm:upgrade": "helm upgrade vehicle-service helm/",
    "kustomize:build:dev": "minikube kubectl kustomize kustomize/overlays/dev",
    "kustomize:build:prod": "minikube kubectl kustomize kustomize/overlays/prod",
    "kustomize:deploy:dev:dry": "minikube kubectl apply -k kustomize/overlays/dev --dry-run=server",
    "kustomize:deploy:dev": "minikube kubectl apply -k kustomize/overlays/dev",
    "kustomize:deploy:prod": "minikube kubectl apply -k kustomize/overlays/prod",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.74.0",
    "dotenv": "^17.2.1",
    "hono": "^4.9.4",
    "shared-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
