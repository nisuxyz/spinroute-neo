{
  "name": "iap-service",
  "version": "0.0.1",
  "scripts": {
    "start": "bun run src/index.ts",
    "start:dev": "PORT=3001 bun run --watch src/index.ts",
    "start:dev:hot": "bun run --hot src/index.ts",
    "container:build": "podman build -f Containerfile.prod -t iap-service:latest .",
    "container:build:dev": "podman build -f Containerfile.dev -t iap-service:dev .",
    "container:dev": "podman run -p 3000:3000 iap-service:dev",
    "container:dev:stop": "podman stop iap-service:dev",
    "compose:up": "podman compose up -d",
    "compose:down": "podman compose down",
    "compose:logs": "podman compose logs -f",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@apple/app-store-server-library": "^1.6.0",
    "@hono/zod-validator": "^0.7.5",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.74.0",
    "dotenv": "^17.2.1",
    "hono": "^4.9.4",
    "shared-utils": "workspace:*",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
