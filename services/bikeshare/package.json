{
  "name": "bikeshare-service",
  "scripts": {
    "start": "bun run src/index.ts",
    "start:dev": "bun run --watch src/index.ts",
    "start:dev:hot": "bun run --hot src/index.ts",
    "supabase:gen": "supabase gen types typescript --project-id ${SUPABASE_PROJECT_ID} --schema bikeshare > lib/db.types.ts",
    "format": "biome format",
    "format:write": "biome format --write",
    "container:build": "podman build -f Containerfile.prod -t bikeshare-service:latest .",
    "container:build:dev": "podman build -f Containerfile.dev -t bikeshare-service:dev .",
    "container:dev": "podman run -p 3000:3000 bikeshare-service:dev",
    "container:dev:stop": "podman stop bikeshare-service:dev",
    "compose:up": "podman compose up -d",
    "compose:down": "podman compose down",
    "compose:logs": "podman compose logs -f",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@supabase/ssr": "catalog:supabase",
    "@supabase/supabase-js": "catalog:supabase",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.10",
    "prisma": "^6.16.3",
    "shared-utils": "workspace:*",
    "supabase": "^2.48.3"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "pg": "^8.16.3"
  },
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
