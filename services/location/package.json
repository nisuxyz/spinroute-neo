{
    "name": "location-service",
    "scripts": {
        "start": "bun run src/index.ts",
        "start:dev": "bun run --watch src/index.ts",
        "start:dev:hot": "bun run --hot src/index.ts",
        "drizzle:generate": "bunx drizzle-kit generate && sed -i 's/\"gis.geography\"/gis.geography/g' ./migrations/*.sql",
        "drizzle:migrate": "bunx drizzle-kit migrate",
        "drizzle:pull": "bunx drizzle-kit pull",
        "drizzle:push": "bunx drizzle-kit push",
        "drizzle:studio": "bunx drizzle-kit studio",
        "container:build": "podman build -f Containerfile.prod -t bikeshare-service:latest .",
        "container:build:dev": "podman build -f Containerfile.dev -t bikeshare-service:dev .",
        "container:dev": "podman run -p 3000:3000 bikeshare-service:dev",
        "container:dev:stop": "podman stop bikeshare-service:dev",
        "compose:up": "podman compose up -d",
        "compose:down": "podman compose down",
        "compose:logs": "podman compose logs -f",
        "helm:lint": "helm lint helm/",
        "helm:template": "helm template bikeshare-service helm/",
        "helm:install": "helm install bikeshare-service helm/",
        "helm:install:dry": "helm install --dry-run --debug bikeshare-service helm/",
        "helm:upgrade": "helm upgrade bikeshare-service helm/",
        "kustomize:build:dev": "minikube kubectl kustomize kustomize/overlays/dev",
        "kustomize:build:prod": "minikube kubectl kustomize kustomize/overlays/prod",
        "kustomize:deploy:dev:dry": "minikube kubectl apply -k kustomize/overlays/dev --dry-run=server",
        "kustomize:deploy:dev": "minikube kubectl apply -k kustomize/overlays/dev",
        "kustomize:deploy:prod": "minikube kubectl apply -k kustomize/overlays/prod",
        "test": "bun test",
        "test:watch": "bun test --watch"
    },
    "dependencies": {
        "@supabase/ssr": "^0.7.0",
        "@supabase/supabase-js": "^2.57.4",
        "better-auth": "^1.3.7",
        "dotenv": "^17.2.1",
        "drizzle-orm": "^0.44.4",
        "hono": "^4.9.4",
        "shared-utils": "workspace:*"
    },
    "devDependencies": {
        "@better-auth/cli": "^1.3.7",
        "@types/bun": "latest",
        "drizzle-kit": "^0.31.4",
        "pg": "^8.16.3"
    },
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "peerDependencies": {
        "typescript": "^5"
    }
}
